<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ListView?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs420.cs420finalproject.AddItemController">
    <TextField fx:id="itemNameField" promptText="Enter item name" />
    <ComboBox fx:id="itemTypeComboBox" promptText="Select item type" />
    <TextField fx:id="customItemTypeField" promptText="Enter custom item type" visible="false" />
    <TextField fx:id="xField" promptText="Enter X coordinate" />
    <TextField fx:id="yField" promptText="Enter Y coordinate" />
    <TextField fx:id="lengthField" promptText="Enter length" />
    <TextField fx:id="widthField" promptText="Enter width" />
    <CheckBox fx:id="containerCheckBox" text="Is Container" onAction="#onContainerCheckBoxChanged"/>
    <ListView fx:id="itemListView" disable="true" />
    <Button text="Save Item" onAction="#onCreateItem" />
    <Button text="Cancel" onAction="#onCancel"/>
</VBox>
